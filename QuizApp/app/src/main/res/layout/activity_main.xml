<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidworld.mvnshrikanth.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/str_app_heading"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_one"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_qst1_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_one_opt1" />

            <RadioButton
                android:id="@+id/radio_qst1_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_one_opt2" />

            <RadioButton
                android:id="@+id/radio_qst1_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_one_opt3" />

            <RadioButton
                android:id="@+id/radio_qst1_opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_one_opt4" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_two"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_qst2_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_two_opt1" />

            <RadioButton
                android:id="@+id/radio_qst2_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_two_opt2" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_three"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_qst3_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_three_opt1" />

            <RadioButton
                android:id="@+id/radio_qst3_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_three_opt2" />

            <RadioButton
                android:id="@+id/radio_qst3_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_three_opt3" />

            <RadioButton
                android:id="@+id/radio_qst3_opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_three_opt4" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_four"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_qst4_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_four_opt1" />

            <RadioButton
                android:id="@+id/radio_qst4_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_four_opt2" />

            <RadioButton
                android:id="@+id/radio_qst4_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_four_opt3" />

            <RadioButton
                android:id="@+id/radio_qst4_opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_four_opt4" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_five"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_qst5_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_five_opt1" />

            <RadioButton
                android:id="@+id/radio_qst5_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_five_opt2" />

            <RadioButton
                android:id="@+id/radio_qst5_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_five_opt3" />

            <RadioButton
                android:id="@+id/radio_qst5_opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/str_qst_five_opt4" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_six"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chk_qst6_opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_qst_six_opt1" />

        <CheckBox
            android:id="@+id/chk_qst6_opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_qst_six_opt2" />

        <CheckBox
            android:id="@+id/chk_qst6_opt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_qst_six_opt3" />

        <CheckBox
            android:id="@+id/chk_qst6_opt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_qst_six_opt4" />

        <CheckBox
            android:id="@+id/chk_qst6_opt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="chkAll"
            android:padding="8dp"
            android:text="@string/str_qst_six_opt5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/str_question_seven"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autocomplete_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_hint"
            android:inputType="text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="clickSubmit"
            android:text="@string/str_submit" />
    </LinearLayout>
</ScrollView>
